<%- include('partials/header.ejs') %>
<link rel="stylesheet" href="/css/control-texts.css" type="text/css">
<form action="/control/texts" method="POST" id="text-form">
    <div class="text-container">
        <% for (var text of texts) { %>
            <div class="text">
                <textarea class="area-orange" name="<%= text._id %>"><%= text.passage %></textarea>
                <div class="delete-text">
                    Delete: <input name="<%= text._id %>-deletePassage" type="checkbox">
                </div>
            </div>
        <% } %>
    </div>
    <button type="submit" class="btn-red">Save</button>
</form>

<form action="/control/texts/new" method="POST" id="create-form">
    <textarea class="area-orange" name="passage"></textarea>
    <button type="submit" class="btn-red">Create<br>passage</button>
</form>

<%- include('partials/footer.ejs') %>