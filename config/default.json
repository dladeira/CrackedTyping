{
    "app": {
        "port": 7300,
        "origin": "http://localhost:7300"
    },
    "mongoOptions": {
            "useNewUrlParser": true,
            "useUnifiedTopology": true
    },
    "game": {
        "defaultOptions": {
            "startDelay": 6000,
            "gameLength": 8000,
            "deleteDelay": 3000
        },
        "defaultText": {
            "passage": "There has been an error in finding a text so the default text has been provided",
            "timesTyped": 0
        },
        "dataCollectionDelay": 100,
        "infiniteOptions": {
            "startDelay": 6000,
            "gameLength": 30000,
            "deleteDelay": 5000
        }
    },
    "account": {
        "constraints": {
                "username": "^[a-zA-Z0-9]{4,20}$",
                "description": "[^]{0,30}$",
                "avatarType": "(^image\/)\\w+"
        },
        "defaults": {
            "description": "No description provided",
            "avatar": "/img/default-avatar.jpg"
        }
    }
}